<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="truelancer.noteapp.noteapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/toolbar"/>

                <include
                    layout="@layout/search_toolbar"
                    android:visibility="gone"/>

            </RelativeLayout>


            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/custom_tab_layout_height"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/white"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/black"
                />
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/app_layout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <ScrollView
            android:id="@+id/search_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_layout"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/contacttxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#bbdefb"
                    android:padding="4dp"
                    android:text="Contact" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/contact_search_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/contacttxt">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/emailtxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_search_recycler"
                    android:background="#bbdefb"
                    android:padding="4dp"
                    android:text="Email" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/email_search_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/emailtxt">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/banktxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_search_recycler"
                    android:background="#bbdefb"
                    android:padding="4dp"
                    android:text="Bank Account" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/bank_search_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/banktxt">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/notetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bank_search_recycler"
                    android:background="#bbdefb"
                    android:padding="4dp"
                    android:text="Note" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/note_search_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/notetxt">

                </android.support.v7.widget.RecyclerView>

                <ImageView
                    android:id="@+id/not_found_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/note_search_recycler"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/not_found_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/not_found_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Searched word not found!"
                    android:textAlignment="center"
                    android:textColor="#bcbcbc"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        app:menu_colorNormal="@color/colorPrimary"
        app:menu_colorPressed="@color/colorPrimaryDark"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_position="left"
        fab:menu_labels_singleLine="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contact"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_label="@string/fab_contact"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_label="@string/fab_email"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_bank_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bank"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_label="@string/fab_account"
            fab:fab_size="mini" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_last_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_note"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_label="@string/fab_note"
            fab:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>


</FrameLayout>
