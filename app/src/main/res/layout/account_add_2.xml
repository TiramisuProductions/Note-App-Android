<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Contact Name"
            android:id="@+id/contact_id"
            android:textColor="@color/black"
            android:textSize="20sp"

            android:layout_height="wrap_content" />

        <EditText
            android:layout_below="@id/contact_id"
            android:id="@+id/contact_name3_et"
            android:layout_width="200dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimaryDark"

            android:paddingBottom="25dp"
            android:layout_marginStart="100dp"
            />
        <ImageView
            android:src="@drawable/ic_tick"
            android:id="@+id/tick1"
            android:layout_toRightOf="@id/contact_name3_et"
            android:layout_below="@id/contact_id"
            android:layout_marginTop="30dp"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/contact_id2"
            android:layout_width="wrap_content"
            android:layout_below="@id/contact_name3_et"
            android:text="Account No"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_below="@id/contact_id2"
            android:id="@+id/account_no_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="100dp"
            android:paddingBottom="25dp"
            android:layout_marginStart="100dp"
            />
        <ImageView
            android:src="@drawable/ic_tick"
            android:id="@+id/tick2"
            android:visibility="invisible"
            android:layout_toRightOf="@id/contact_name3_et"
            android:layout_below="@id/contact_id2"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/contact_id3"
            android:layout_width="wrap_content"
            android:layout_below="@id/account_no_et"
            android:text="Others(IFSC)"

            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_below="@id/contact_id3"
            android:id="@+id/others_et"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColor="@color/black"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingBottom="25dp"
            android:layout_marginStart="100dp"
            />
        <ImageView
            android:src="@drawable/ic_tick"
            android:id="@+id/tick3"
            android:visibility="invisible"
            android:layout_toRightOf="@id/contact_name3_et"
            android:layout_below="@id/contact_id3"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:visibility="invisible"
            android:id="@+id/saveaccount_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</ScrollView>